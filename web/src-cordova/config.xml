<?xml version='1.0' encoding='utf-8'?>
<widget id="com.vue.vuejscordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>vue_dr</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>

    <hook type="after_prepare" src="../node_modules/vue-cli-plugin-cordova/serve-config-hook.js" />
    
    <content src="index.html" />

    <access origin="*" />
    <allow-navigation href="*"/>
    <allow-intent href="*"/>

    <platform name="android">
        <preference name="loadUrlTimeoutValue" value="700000" />
               <allow-intent href="market:*" />
    </platform>
</widget>